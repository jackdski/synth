{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "./build/synth.elf",
            "name": "Debug with ST-Link",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "servertype": "stlink",
            "svdFile": "${workspaceRoot}/src/STM32F429.svd"
        },
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./build/synth.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "showDevDebugOutput": "raw",
            "armToolchainPath": "/opt/homebrew/bin/",
            "svdFile": "${workspaceRoot}/src/STM32F429.svd"
        },
        {
            "name": "Rust Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/wavetable_generator/target/debug/wavetable_generator",
            "cwd": "${workspaceFolder}/wavetable_generator",
            "args": [],
        }
    ]
}